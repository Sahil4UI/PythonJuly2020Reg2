import pygame
pygame.init()

height = 500
width = 1000

screen = pygame.display.set_mode((width,height))
red = 255,0,0
white = 255,255,255
def game():
    brickWidth = 200
    brickHeight = 40
    rows = 5
    cols = (width//brickWidth)
    brickList = []
    for i in range(rows):
        for j in range(cols):
            brickList.append(pygame.Rect((brickWidth+10)*j,(brickHeight+10)*i,brickWidth,brickHeight))
        

    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                quit()
                
        screen.fill(white)
        for x in range(len(brickList)):
            pygame.draw.rect(screen,red,brickList[x])
        pygame.display.flip()
            
game()
    
